<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hand.web.dao.SendMsgDao">

    <resultMap type="com.hand.web.entity.SendMsg" id="SendMsgMap">
        <result property="cId" column="c_id" jdbcType="INTEGER"/>
        <result property="cName" column="c_name" jdbcType="VARCHAR"/>
        <result property="cPhone" column="c_phone" jdbcType="VARCHAR"/>
        <result property="cEmail" column="c_email" jdbcType="VARCHAR"/>
        <result property="cSubject" column="c_subject" jdbcType="VARCHAR"/>
        <result property="cMessage" column="c_message" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SendMsgMap">
        select
          c_id, c_name, c_phone, c_email, c_subject, c_message
        from team01.send_msg
        where c_id = #{cId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SendMsgMap">
        select
          c_id, c_name, c_phone, c_email, c_subject, c_message
        from team01.send_msg
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SendMsgMap">
        select
          c_id, c_name, c_phone, c_email, c_subject, c_message
        from team01.send_msg
        <where>
            <if test="cId != null">
                and c_id = #{cId}
            </if>
            <if test="cName != null and cName != ''">
                and c_name = #{cName}
            </if>
            <if test="cPhone != null and cPhone != ''">
                and c_phone = #{cPhone}
            </if>
            <if test="cEmail != null and cEmail != ''">
                and c_email = #{cEmail}
            </if>
            <if test="cSubject != null and cSubject != ''">
                and c_subject = #{cSubject}
            </if>
            <if test="cMessage != null and cMessage != ''">
                and c_message = #{cMessage}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="cId" useGeneratedKeys="true">
        insert into team01.send_msg(c_name, c_phone, c_email, c_subject, c_message)
        values (#{cName}, #{cPhone}, #{cEmail}, #{cSubject}, #{cMessage})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update team01.send_msg
        <set>
            <if test="cName != null and cName != ''">
                c_name = #{cName},
            </if>
            <if test="cPhone != null and cPhone != ''">
                c_phone = #{cPhone},
            </if>
            <if test="cEmail != null and cEmail != ''">
                c_email = #{cEmail},
            </if>
            <if test="cSubject != null and cSubject != ''">
                c_subject = #{cSubject},
            </if>
            <if test="cMessage != null and cMessage != ''">
                c_message = #{cMessage},
            </if>
        </set>
        where c_id = #{cId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from team01.send_msg where c_id = #{cId}
    </delete>

</mapper>