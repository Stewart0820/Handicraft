<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hand.web.dao.CustomersDao">

    <resultMap type="com.hand.web.entity.Customers" id="CustomersMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="image" column="image" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CustomersMap">
        select
          id, image, name, content
        from team01.customers
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CustomersMap">
        select
          id, image, name, content
        from team01.customers
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="CustomersMap">
        select
          id, image, name, content
        from team01.customers
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="image != null and image != ''">
                and image = #{image}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into team01.customers(image, name, content)
        values (#{image}, #{name}, #{content})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update team01.customers
        <set>
            <if test="image != null and image != ''">
                image = #{image},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from team01.customers where id = #{id}
    </delete>

</mapper>